<configuration>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.rootdir</name>
    <!-- <value>file:///home/cloudland/hbase_data</value> -->
    <value>hdfs://ubuntu144:9000/hbase</value>
  </property>
  <property>
    <name>hbase.master.info.bindAddress</name>
    <value>ubuntu144</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.dataDir</name>
    <value>/home/cloudland/zookeeper_data</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>ubuntu144, ubuntu145, ubuntu146, ubuntu147</value>
  </property>
  <property>
    <name>dfs.replication</name>
    <value>3</value>
  </property>
  <property>
    <name>hbase.master</name> 
    <value>ubuntu144:60000</value>
  </property>
</configuration>

